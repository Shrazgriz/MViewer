<Window x:Class="MViewer.WRayHits"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MViewer"
        mc:Ignorable="d"
        Title="模型离散" Height="280" Width="400">
    <Window.Resources>
        <local:V3ToStringConverter x:Key="V3ToStringConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="60"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10"  Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch">
            <Label >射线方向</Label>
            <ComboBox x:Name="CB_RayDir" Margin="4" SelectedIndex="{Binding Path=RayDirection, Mode=TwoWay}">
                <ComboBoxItem>X+</ComboBoxItem>
                <ComboBoxItem>X-</ComboBoxItem>
                <ComboBoxItem>Y+</ComboBoxItem>
                <ComboBoxItem>Y-</ComboBoxItem>
                <ComboBoxItem>Z+</ComboBoxItem>
                <ComboBoxItem>Z-</ComboBoxItem>
            </ComboBox>
            <Label >方向矢量</Label>
            <TextBox x:Name="TB_Dir" Margin="4" Text="{Binding Path= Direction,Converter={StaticResource V3ToStringConverter}, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel Margin="10"  Grid.Row="0" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch">
            <Label Margin="4">射线密度</Label>
            <TextBox x:Name="TB_Resolution" Margin="4" Text="{Binding Path= Resolution, Mode=TwoWay}"></TextBox>
            <CheckBox Margin="4" IsChecked="{Binding Path=AlignZ,Mode=TwoWay}">旋转转至Z轴</CheckBox>
            <CheckBox Margin="4" IsChecked="{Binding Path=ShowModel,Mode=TwoWay}">显示模型</CheckBox>
        </StackPanel>
        <StackPanel Margin="10" Grid.ColumnSpan="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button x:Name="BN_OK" Margin="18 0" MinWidth="120" HorizontalAlignment="Stretch"
                    Click="BN_OK_Click">
                确 定
            </Button>
            <Button x:Name="BN_Cancel" Margin="18 0" MinWidth="120" HorizontalAlignment="Stretch"
                    Click="BN_Cancel_Click">
                取 消
            </Button>
        </StackPanel>
    </Grid>
</Window>
